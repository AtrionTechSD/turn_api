{
  "openapi": "3.0.2",
  "info": {
    "title": "API Title",
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:3001" }],
  "components": {
    "schemas": {
      "Auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      }
    },
    "examples": {
      "email": {
        "summary": "",
        "value": "grullonb@gmail.com"
      },
      "password": {
        "value": "grullona"
      }
    },
    "securitySchemes": {
      "auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register new account",
        "tags": ["Auth"],
        "description": "Route for create new account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Auth"
              }
            }
          }
        },
        "parameters": [],
        "responses": {
          "200": {
            "description": "Account created sucessfully"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "For logging in",
        "tags": ["Auth"],
        "description": "User can access to his account",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Auth"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Object with user"
          },
          "401": {
            "description": "Error authenticating"
          }
        }
      }
    }
  }
}
